<br /><br />
<div class="clear"></div>
<section>
<h2>Register</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div><%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, :class => "creativity" %></div>
<br />

<div> <%=f.label :username %><br />
  <%= f.text_field :name, autofocus: true, :class => "creativity" %></div>
  <br />
  <div class="radios">
<div> <%= f.radio_button :is_female, '1' %> <%= f.label :is_female, "The Girlfriend" %> </div>
<div> <%= f.radio_button :is_female, '0' %> <%= f.label :is_female, "The Boyfriend" %> </div>
</div>
<br />
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :class => "creativity" %>
  </div>
  <br />

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "creativity" %>
  </div>
<br />
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "creativity" %>
  </div><br />
<br />
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</section>
